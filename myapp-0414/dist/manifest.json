{
  "_metadata": {
    "major_version": 2
  },
  "display_information": {
    "name": "myapp-0414",
    "description": "A sample that demonstrates using a function, workflow and trigger to send a greeting"
  },
  "icon": "assets/default_new_app_icon.png",
  "oauth_config": {
    "scopes": {
      "bot": [
        "commands",
        "chat:write",
        "chat:write.public"
      ]
    },
    "token_management_enabled": false
  },
  "features": {
    "bot_user": {
      "display_name": "myapp-0414"
    },
    "app_home": {
      "messages_tab_enabled": true,
      "messages_tab_read_only_enabled": true
    }
  },
  "settings": {
    "function_runtime": "slack",
    "org_deploy_enabled": true
  },
  "functions": {
    "greeting_function": {
      "title": "Generate a greeting",
      "description": "Generate a greeting",
      "input_parameters": {
        "properties": {
          "recipient": {
            "type": "slack#/types/user_id",
            "description": "Greeting recipient"
          },
          "message": {
            "type": "string",
            "description": "Message to the recipient"
          },
          "test": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string",
                "description": "Issue Title"
              },
              "description": {
                "type": "string",
                "description": "Issue Description"
              },
              "assignees": {
                "type": "string",
                "description": "Assignees"
              }
            },
            "required": [
              "title"
            ]
          }
        },
        "required": [
          "message",
          "test"
        ]
      },
      "output_parameters": {
        "properties": {
          "greeting": {
            "type": "string",
            "description": "Greeting for the recipient"
          }
        },
        "required": [
          "greeting"
        ]
      }
    }
  },
  "workflows": {
    "greeting_workflow": {
      "title": "Send a greeting",
      "description": "Send a greeting to channel",
      "input_parameters": {
        "properties": {
          "interactivity": {
            "type": "slack#/types/interactivity"
          },
          "channel": {
            "type": "slack#/types/channel_id"
          }
        },
        "required": [
          "interactivity"
        ]
      },
      "steps": [
        {
          "id": "0",
          "function_id": "slack#/functions/open_form",
          "inputs": {
            "title": "Send a greeting",
            "interactivity": "{{inputs.interactivity}}",
            "submit_label": "Send greeting",
            "fields": {
              "elements": [
                {
                  "name": "recipient",
                  "title": "Recipient",
                  "type": "slack#/types/user_id"
                },
                {
                  "name": "channel",
                  "title": "Channel to send message to",
                  "type": "slack#/types/channel_id",
                  "default": "{{inputs.channel}}"
                },
                {
                  "name": "message",
                  "title": "Message to recipient",
                  "type": "string",
                  "long": true
                }
              ],
              "required": [
                "recipient",
                "channel",
                "message"
              ]
            }
          }
        },
        {
          "id": "1",
          "function_id": "#/functions/greeting_function",
          "inputs": {
            "recipient": "{{steps.0.fields.recipient}}",
            "message": "{{steps.0.fields.message}}",
            "test": {
              "title": "{{steps.0.fields.message}}"
            }
          }
        },
        {
          "id": "2",
          "function_id": "slack#/functions/send_message",
          "inputs": {
            "channel_id": "{{steps.0.fields.channel}}",
            "message": "{{steps.1.greeting}}"
          }
        }
      ]
    }
  },
  "types": {},
  "outgoing_domains": [
    "google.com"
  ]
}